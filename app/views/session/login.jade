extends /layout

block body
  .row
    .col-md-4.col-md-offset-4.login-form
      h2 Login
      if errorText
        p.text-error
          strong= errorText
        p.text-error Note that usernames and passwords are case sensitive.
      else
        p Usernames and passwords are case sensitive.
      form(action='', method='POST')
        fieldset
          - var controlGroupClass = (!!err ? "error" : "")
          .control-group(class=controlGroupClass)
            input(type='hidden', name='form', value=(typeof formName === 'undefined' ? 'login' : formName))
            .clearfix
              - var email = data.email || ""
              input.text(type='text', name='username', placeholder='Username', value=data.username)
            .clearfix
              input.text(type='password', name='password', placeholder='Password')
          if err
            p.text-error Email or password incorrect
          button.btn.btn-primary.btn-lg(type='submit') Sign in
        br
        a.register(href="/forgot") Forgot password?
        br
        br
        a.register.btn.btn-success(href="/register") Register
