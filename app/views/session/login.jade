extends /layout

block everything
  #login.container
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Login
          .panel-body
            if errorText
              p.text-error
              strong= errorText
              p.text-error Note that usernames and passwords are case sensitive.
            else
              p Usernames and passwords are case sensitive.
            form(action='', method='POST')
              fieldset
                - var controlGroupClass = (!!err ? "error" : "")
                .form-group(class=controlGroupClass)
                  input(type='hidden', name='form', value=(typeof formName === 'undefined' ? 'login' : formName))
                  .form-group
                    - var email = data.email || ""
                    input.form-control(type='text', name='username', placeholder='Username', value=data.username)
                  .form-group
                    input.form-control(type='password', name='password', placeholder='Password')
                if err
                  p.text-error Email or password incorrect
                button.btn.btn-lg.btn-success.btn-block(type='submit') Sign in
              br
              a.register(href="/forgot") Forgot password?
              br
              br
              a.register.btn.btn-lg.btn-success.btn-block(href="/register") Register
