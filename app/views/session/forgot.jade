extends /layout

block everything
  #login.container
    if sent
      .row
        h3 Password Recovery Email Sent
    else
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Reset Password
            .panel-body
              if errorText
                p.text-error
                strong= errorText
              p.
                Forgot your password? Don't worry - it happens to us all! Just
                stick your email in the box below, click the button and we'll
                send you a reset code.
              form(action='', method='POST')
                fieldset
                  - var controlGroupClass = (!!err ? "error" : "")
                  .form-group(class=controlGroupClass)
                    input(type='hidden', name='form', value=(typeof formName === 'undefined' ? 'reset' : formName))
                    .form-group
                      - var email = data.email || ""
                      input.form-control(type='text', name='email', placeholder='Email', value=data.email)
                  if err
                    p.text-error Email or password incorrect
                  button.btn.btn-lg.btn-success.btn-block(type='submit') Reset Password
                br
                a.register(href="/login") Log in
