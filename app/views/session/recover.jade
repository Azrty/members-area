extends /layout

block everything
  #login.container
    if error
      h3.error= error
    else if done
      h3.success Password reset successfully
    else
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Recover
            .panel-body
              p To reset your password, pick a new one below:
              form(action='', method='POST')
                fieldset
                  - var controlGroupClass = (!!err ? "error" : "")
                  .form-group(class=controlGroupClass)
                    input(type='hidden', name='form', value=(typeof formName === 'undefined' ? 'recover' : formName))
                    .form-group
                      input.form-control(type='password', name='password', placeholder='New Password')
                  if err
                    p.text-error Email or password incorrect
                  button.btn.btn-lg.btn-success.btn-block(type='submit') Reset Password
