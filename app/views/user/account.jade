extends /sidebar

block title
  | Account

block content
  h2 Account settings
  p.lead.
    Hello #{loggedInUser.fullname}! Here you can change your personal details.

  if error
    p.text-error
      if error.property
        | There was an error with '#{error.property}': 
      = error.message

  if success
    p.text-success Your data has been updated

  form.form-horizontal(method="POST")
    .control-group
      label.control-label Full Name
      .controls
        input(name='fullname', value=data.fullname)
    .control-group
      label.control-label Address
      .controls
        textarea(name='address', rows=5)= data.address
    .control-group
      label.control-label Password
      .controls
        input(type='password', name='password')
    .control-group
      label.control-label Password (again)
      .controls
        input(type='password', name='password2')
    .control-group
      .controls
        button.btn-success(type="submit") Update
