extends /layout

mixin navList(navigation)
  each item in navigation
    li(class=(item.className + (item.header ? ' sidebar-header' : '') + (item.active ? ' active' : '')))
      if item.href
        a(href=item.href)= item.title
      else
        = item.title
    if item.items
      +navList(item.items)

block sidebar
  .row
    .col-md-3
      .navbar-default.sidebar(role='navigation')
        ul.nav.sidebar-nav.navbar-collapse#side-menu
          +navList(navigation)
