extends /sidebar

block title
  | Banking - #{transactionAccount.name}

block content
  h2 Banking - #{transactionAccount.name}
  h3 All transactions:
  table.table.table-striped
    tr
      th Fitid
      th Date
      th Type
      th Description
      th Amount
      th Payment?
    for entry in transactions
      tr
        td= entry.fitid
        td= entry.when.toISOString().substr(0,10)
        td= entry.type
        td= entry.description
        td £#{(entry.amount/100).toFixed(2)}
        td
          if entry.meta.isPayment
            | ✔
          else
            | ✘
