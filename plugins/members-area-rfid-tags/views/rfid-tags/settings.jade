extends /sidebar

block title
  | RFID Tag Settings

block content
  h2 RFID Tag Settings

  form.form-horizontal(method="POST")
    .form-group
      label.control-label API secret
      .controls
        input(type='text', name='apiSecret', value=data.apiSecret)

    .form-group
      .controls
        button.btn.btn-success(type="Submit") Save

  h3 Tags
  ul
    for tag in tags
      li
        a(href="/settings/rfid-tags/#{tag.id}")= tag.uid
        if tag.user
          br
          a(href="/people/#{tag.user_id}")= tag.user.fullname
          |  (#{tag.count} scans)

  h3 Recent entries
  table.table
    tr
      th When
      th Location
      th User
    each entry in entries
      tr
        td= entry.when.toISOString()
        td= entry.location
        td
          if entry.user
            a(href="/people/" + entry.user.id) #{entry.user.fullname} (#{entry.user.username})
          else
            | -
